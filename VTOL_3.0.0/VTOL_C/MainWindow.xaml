<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:cs="clr-namespace:WPF.CornerSmoothing;assembly=WPF.CornerSmoothing"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:local="clr-namespace:VTOL_C"
        xmlns:uis="http://schemas.modernwpf.com/2019"   
        xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
        xmlns:ui1="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        UseLayoutRounding="True"
        x:Class="VTOL_C.MainWindow"
        mc:Ignorable="d"
        Title="VTOL - 4.0.0" 
        Height="768" 
        Width="1240"
      
        Padding="2,2,2,2" 
        WindowStartupLocation="CenterScreen"  
        Loaded="Window_Loaded" Background="#FF272727" WindowTitleBrush="#FF191919" Foreground="White"  SaveWindowPosition="True"  
  
>

    
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <ui1:Button ToolTip="Open up the GitHub site">
                <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="SocialGithubOctocat" />
            </ui1:Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
   
    <mah:MetroWindow.Resources>
        
        
        <Style x:Key="CustomLightMinButtonStyle"
               BasedOn="{StaticResource MahApps.Styles.Button.MetroWindow.Light}"
               TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGreen" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Green" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CustomDarkMinButtonStyle"
               BasedOn="{StaticResource MahApps.Styles.Button.MetroWindow.Dark}"
               TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource MahApps.Brushes.Accent}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGreen" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Green" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomLightMaxButtonStyle"
               BasedOn="{StaticResource MahApps.Styles.Button.MetroWindow.Light}"
               TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGoldenrod" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Yellow" />
                    <Setter Property="Foreground" Value="Black" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CustomDarkMaxButtonStyle"
               BasedOn="{StaticResource MahApps.Styles.Button.MetroWindow.Dark}"
               TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGoldenrod" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Yellow" />
                    <Setter Property="Foreground" Value="Black" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomLightCloseButtonStyle"
               BasedOn="{StaticResource MahApps.Styles.Button.MetroWindow.Close.Light.Win10}"
               TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkRed" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CustomDarkCloseButtonStyle"
               BasedOn="{StaticResource MahApps.Styles.Button.MetroWindow.Close.Dark.Win10}"
               TargetType="{x:Type Button}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkRed" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </mah:MetroWindow.Resources>
    <mah:MetroWindow.WindowButtonCommands>
        <mah:WindowButtonCommands Minimize="A custom Tooltip which will be shown on Min button"
                                    Maximize="Maximize the window"
                                    Restore="Restore the window"
                                    Close="Noooo... don't close me!"
                                   />
    </mah:MetroWindow.WindowButtonCommands>
    <!--ui:WindowHelper.UseModernWindowStyle="True"-->
    <!--ui:WindowHelper.SystemBackdropType="Mica"-->
    <Grid x:Name="Grid_Top" Background="#FF1D1D1D">
      
        <!-- Your content here -->
        <Image x:Name="BackgroundImage"  Source="/Resources/Backgrounds/Backgrounds_Home_Page/wallpaper(32).jpg" Stretch="UniformToFill" AutomationProperties.Name="BackgroundImage" IsHitTestVisible="False" ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Image.Effect>
            <BlurEffect Radius="15"/>
        </Image.Effect>
        </Image>
        <Border x:Name="fallback_border" Visibility="Collapsed"/>
        <Border x:Name="Shadow_Menu" Visibility="Visible" Height="49" VerticalAlignment="Top">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Repeat">
                    <GradientStop Color="#00000000" Offset="0.997"/>
                    <GradientStop Color="#66151515" Offset="0.467"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <ui:NavigationView x:Name="Nav_Main" IsPaneOpen="False" Panel.ZIndex="10" PaneDisplayMode="Top" SelectionChanged="Nav_Main_SelectionChanged" AlwaysShowHeader="False" IsBackButtonVisible="Collapsed" CornerRadius="12,12,12,12" IsFooterSeparatorVisible="True" OpenPaneLength="200" IsPaneToggleButtonVisible="False" Padding="10,0,0,0">
            <ui:NavigationView.Resources>
                <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.NavigationViewContentBackgroundKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ExpanderHeaderBorderBrushKey}" Color="Transparent"/>

                <Thickness x:Key="NavigationViewContentGridBorderThickness">0,0,0,0</Thickness>
            </ui:NavigationView.Resources>

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem  x:Name="Navitem_Home" Content="Home">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Home}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem  x:Name="Navitem_Mods" Content="Mods">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.OEM}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem x:Name="Navitem_Store" Content="Store">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.CloudDownload}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem x:Name="Navitem_Tools" Content="Tools">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.DeveloperTools}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>

                <ui:NavigationViewItem Content="Settings">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Settings}"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>


            </ui:NavigationView.FooterMenuItems>
         
            <Border x:Name="Border_Main"  >
                
                <ui:Frame x:Name="Frame_Main" Width="1240" Height="667" HorizontalAlignment="Center" VerticalAlignment="Top" />

            </Border>
        </ui:NavigationView>
        
    </Grid>
</mah:MetroWindow>